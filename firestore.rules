rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Leaderboard collection
    match /leaderboard/{document} {
      // Anyone can read the leaderboard
      allow read: if true;
      
      // Only authenticated users can write scores
      allow write: if request.auth != null;
      
      // Allow admins to delete leaderboard entries
      allow delete: if request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Users collection (optional, for future features)
    match /users/{userId} {
      // Allow users to read/write their own doc, or admins to read any user doc
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow admins to manage any user's completedMatches
      match /completedMatches/{matchId} {
        allow read, write: if request.auth != null && (
          request.auth.uid == userId ||
          exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        );
      }

      // Allow user to manage any other nested documents
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Public tournaments -> matches -> predictions (user can write only own prediction doc)
    match /tournaments/{tournamentId} {
      allow read: if true;
      // Allow admins to delete tournament documents
      allow delete: if request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      match /matches/{matchId} {
        allow read: if true;
        // Allow admins to delete matches and all nested collections
        allow delete: if request.auth != null &&
          exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        // Only admins can write the outcome doc (stored under meta/outcome)
        match /meta/outcome {
          allow read: if true;
          allow write: if request.auth != null &&
            exists(/databases/$(database)/documents/admins/$(request.auth.uid));
          // Allow admins to delete outcome docs
          allow delete: if request.auth != null &&
            exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        }
        match /predictions/{predictionUserId} {
          // Allow owner to read/write, or admin to read (for listing/deletion)
          allow read: if request.auth != null && (
            request.auth.uid == predictionUserId ||
            exists(/databases/$(database)/documents/admins/$(request.auth.uid))
          );
          allow write: if request.auth != null && request.auth.uid == predictionUserId;
          // Allow admins to delete any prediction
          allow delete: if request.auth != null &&
            exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        }
        match /scores/{scoreUserId} {
          allow read: if true;
          // Allow admins to delete scores
          allow delete: if request.auth != null &&
            exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        }
      }
    }

    // Admins collection: users can read their own admin flag; no client writes
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Auctions collection: teams and player assignments
    match /auctions/{category} {
      allow read: if true; // Anyone can read auction data
      match /teams/{teamId} {
        allow read: if true; // Anyone can read team data
        // Only admins can write (assign/remove players)
        allow write: if request.auth != null &&
          exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      }
    }
  }
}

